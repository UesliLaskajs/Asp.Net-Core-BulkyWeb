@page
@model BulkyWeb_RazorApp.Pages.Categories.IndexModel
@{
}


<div class="container">
    
    <!-- Header Section -->
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Category/Create"  class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create New Category
            </a>
        </div>
    </div>

    <!-- Table Section -->
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-light">
            <tr class="table-primary">
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoriesItems.OrderBy(a => a.CategoryOrder))  // From The model We Sort By Category and Display Data
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.CategoryOrder</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center">
                            <!-- Edit Button -->
                            <a asp-page="Category/Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-outline-primary mx-2" role="button"><!--Asp Route of Displayed Id Paaram-->
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <!-- Delete Button -->
                            <a asp-page="Category/Delete"  asp-route-id="@obj.Id" class="btn btn-sm btn-outline-danger mx-2" role="button"><!--Asp Route of DeleteId Paaram-->
                                <i class="bi bi-x-square"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

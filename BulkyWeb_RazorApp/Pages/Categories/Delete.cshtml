@page
@model BulkyWeb_RazorApp.Pages.Categories.DeleteModel
@{
}


<form method="post" asp-page="Categories/Delete"  >
    <!-- Post Method  -->

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <!-- Hidden Field for CategoryId -->
        <input type="hidden" asp-for="Category.Id" />

        <div class="row mb-3">
            <label class="text-primary" asp-for="Category.Name"></label> <!-- Label Displaying The Name From The Model -->
            <input type="text" class="form-control" disabled asp-for="Category.Name" />
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Category.CategoryOrder"></label>
            <input type="text" class="form-control" disabled asp-for="Category.CategoryOrder" />
        </div>

        <div class="row mb-3">
            <div class="col col-6 md-col-3">
                <button type="submit" class="btn btn-danger form-control"  onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
            </div>

            <div class="col col-6 md-col-3">
                <a class="btn btn-secondary form-control" asp-page="/Categories/Index">Go Back</a>
            </div>
        </div>
    </div>
</form>

@model Product //Importing The Model

<form method="post" asp-action="Create">
    <!-- Post Method  -->


    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> <!--Asp Validation Displaying All Errors  Catched-->
        <div class="row mb-3">
            <label class="text-primary" asp-for="Title"></label> <!-- Label Displaying The Name From The Model -->
            <input type="text" class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span> <!-- Validation From ServerError -->
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Description"></label>
            <input type="text" class="form-control" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <div class="row mb-3">
            <label class="text-primary" asp-for="ISBN"></label>
            <input type="text" class="form-control" asp-for="ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Price"></label>
            <input type="text" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="ListPrice"></label>
            <input type="text" class="form-control" asp-for="ListPrice" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Price50"></label>
            <input type="text" class="form-control" asp-for="Price50" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Price100"></label>
            <input type="text" class="form-control" asp-for="Price100" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

       

        

        <div class="row mb-3">
            <div class="col col-6 md-col-3">
                <button type="submit" class="btn btn-primary form-control " asp-controller="Product" asp-action="Create">Create</button> <!--Subimt Button og the values-->
            </div>

            <!-- asp-Controller Matches the Controller where action matches the action from controller-->
            <div class="col col-6 md-col-3">
                <a class="btn btn-secondary form-control" asp-controller="Product" asp-action="Index">Go Back</a>
            </div>
        </div>
    </div>

</form>


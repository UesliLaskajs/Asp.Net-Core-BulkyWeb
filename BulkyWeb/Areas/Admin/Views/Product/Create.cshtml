@model ProductVM //Importing The Model 

<form method="post" asp-action="Create" formenctype="multipart/form-data">
    <!-- Post Method  -->


    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> <!--Asp Validation Displaying All Errors  Catched-->
        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.Title"></label> <!-- Label Displaying The Name From The Model -->
            <input type="text" class="form-control" asp-for="Products.Title" />
            <span asp-validation-for="Products.Title" class="text-danger"></span> <!-- Validation From ServerError -->
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.Author"></label> <!-- Label Displaying The Name From The Model -->
            <input type="text" class="form-control" asp-for="Products.Author" />
            <span asp-validation-for="Products.Author" class="text-danger"></span> <!-- Validation From ServerError -->
        </div>


        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.Description"></label>
            <input type="text" class="form-control" asp-for="Products.Description" />
            <span asp-validation-for="Products.Description" class="text-danger"></span>
        </div>


        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.ISBN"></label>
            <input type="text" class="form-control" asp-for="Products.ISBN" />
            <span asp-validation-for="Products.ISBN" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.Price"></label>
            <input type="text" class="form-control" asp-for="Products.Price" />
            <span asp-validation-for="Products.Price" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.ListPrice"></label>
            <input type="text" class="form-control" asp-for="Products.ListPrice" />
            <span asp-validation-for="Products.ListPrice" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.Price50"></label>
            <input type="text" class="form-control" asp-for="Products.Price50" />
            <span asp-validation-for="Products.Price50" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.Price100"></label>
            <input type="text" class="form-control" asp-for="Products.Price100" />
            <span asp-validation-for="Products.Price100" class="text-danger"></span>
        </div>
        <label class="text-primary">Image Url</label>
        <div class=" form-floating py-2 col-12">
          
            <input type="file" class="form-control border-0 shadow"  />
        </div>


        <div class="row mb-3">
            <label class="text-primary" asp-for="Products.Price100">Select  Category</label>
            <select asp-for="Products.CategoryId" asp-items="@Model.CategoryList" class="form-select border" ><!--ViewBag stores Data from Controller To View-->
                <option disabled selected>Select Category</option>
            </select>
           
            <span asp-validation-for="Products.Price100" class="text-danger"></span>
        </div>


        <div class="row mb-3">
            <div class="col col-6 md-col-3">
                <button type="submit" class="btn btn-primary form-control " asp-controller="Product" asp-action="Create">Create</button> <!--Subimt Button og the values-->
            </div>

            <!-- asp-Controller Matches the Controller where action matches the action from controller-->
            <div class="col col-6 md-col-3">
                <a class="btn btn-secondary form-control" asp-controller="Product" asp-action="Index">Go Back</a>
            </div>
        </div>
    </div>

</form>


@model List< Product> // Got The List Model from Category Model

<div class="container">
    
    <!-- Header Section -->
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create New Product
            </a>
        </div>
    </div>

    <!-- Table Section -->
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-light">
            <tr class="table-primary">
                <th>Book Title</th>
                <th>ISBN </th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(a => a.Price))  // From The model We Sort By Category and Display Data
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.Price</td>
                    <td>@obj.Author</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center">
                            <!-- Edit Button -->
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-outline-primary mx-2" role="button"><!--Asp Route of Displayed Id Paaram-->
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <!-- Delete Button -->
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-outline-danger mx-2" role="button">
                                <!--Asp Route of DeleteId Paaram-->
                                <i class="bi bi-x-square"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model OrderVM

<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1 d-none d-md-block">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <!-- Left Column: Pickup Details -->
                        <div class="col-12 col-lg-6 pb-4">
                            <h4 class="mb-3 text-primary">PickUp Details:</h4>

                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                                    {
                                        <input asp-for="orderHeader.Name" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.Name" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                                    {
                                        <input asp-for="orderHeader.PhoneNumber" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.PhoneNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                                    {
                                        <input asp-for="orderHeader.StreetAdress" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.StreetAdress" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                                    {
                                        <input asp-for="orderHeader.City" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.City" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                                    {
                                        <input asp-for="orderHeader.State" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.State" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                                    {
                                        <input asp-for="orderHeader.PostalCode" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.PostalCode" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.ApplicationUser.Email" readonly type="text" class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.OrderDate" readonly type="text" class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                                    {
                                        <input asp-for="orderHeader.Carrier" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.Carrier" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                                    {
                                        <input asp-for="orderHeader.TrackingNumber" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.TrackingNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.ShippingDate" readonly type="text" class="form-control" />
                                </div>
                            </div>

                            @if (User.IsInRole(SD.Role_User_Admin) || User.IsInRole(SD.Role_User_Employee))
                            {
                                <div class="row my-1">
                                    <div class="col-3">Session ID</div>
                                    <div class="col-9">
                                        <input asp-for="orderHeader.SessionId" readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Payment Intent ID</div>
                                    <div class="col-9">
                                        <input asp-for="orderHeader.PaymentIntentId" readonly type="text" class="form-control" />
                                    </div>
                                </div>
                            }

                            <div class="row my-1">
                                @if (Model.orderHeader.SessionId == null)
                                {
                                    <div class="col-3">Payment Due Date</div>
                                    <div class="col-9">
                                        <input value="@Model.orderHeader.PaymentDueDate" readonly type="text" class="form-control" />
                                    </div>
                                }
                                else
                                {
                                    <div class="col-3">Payment Date</div>
                                    <div class="col-9">
                                        <input value="@Model.orderHeader.PaymentDate" readonly type="text" class="form-control" />
                                    </div>
                                }
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input asp-for="orderHeader.PaymentStatus" readonly type="text" class="form-control" />
                                </div>
                            </div>

                            <input type="submit" class="btn btn-warning form-control my-1" value="Update Order Details" />
                        </div>

                        <!-- Right Column: Order Summary -->
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="mb-3 text-primary">Order Summary</h4>
                            <label class="btn btn-outline-primary form-control my-2">
                                Order Status - XXOrderStatusXX
                            </label>

                            <ul class="list-group mb-3">
                                <li class="list-group-item d-flex justify-content-between p-2">
                                    <div class="row w-100">
                                        <div class="col-8">
                                            <h6 class="my-0 text-primary">Title</h6>
                                            <small class="text-muted">Price : $$$</small><br />
                                            <small class="text-muted">Quantity : XX</small>
                                        </div>
                                        <div class="col-4 text-end">
                                            <p class="text-success">Count * Price</p>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item bg-primary">
                                    <div class="row w-100">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL</h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">$$$$</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>

                            <input type="submit" class="btn btn-success form-control my-1" value="Pay Now" />
                            <input type="submit" class="btn btn-primary form-control my-1" value="Start Processing" />
                            <input type="submit" class="btn btn-primary form-control my-1" value="Ship Order" />
                            <input type="submit" class="btn btn-danger form-control my-1" value="Cancel Order" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<div class="container">

    <!-- Header Section -->
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="justify-content-between d-flex pb-5 pt-2">
            <span></span>
            <ul class="list-group list-group-horizontal-sm">
                <li>
                    <a style="text-decoration:none" asp-controller="order" asp-action="Index" asp-route-status="inprocess">
                        <li class="list-group-item"> In Process</li>
                    </a>
                </li>

                <li>
                    <a style="text-decoration:none" asp-controller="order" asp-action="Index" asp-route-status="pending">
                <li class="list-group-item"> Pending</li>
                </a>
                </li>

                <li>
                    <a style="text-decoration:none" asp-controller="order" asp-action="Index" asp-route-status="completed">
                <li class="list-group-item"> Completed</li>
                </a>
                </li>

                <li>
                    <a style="text-decoration:none" asp-controller="order" asp-action="Index" asp-route-status="approved">
                <li class="list-group-item">Approved</li>
                </a>
                </li>

                <li>
                    <a style="text-decoration:none" asp-controller="order" asp-action="Index" asp-route-status="all">
                <li class="list-group-item"> All</li>
                </a>
                </li>
            </ul>
        </div>
       
    </div>
    <!-- Table Section -->
    <table id="myOrderTable" class="table table-bordered table-striped table-hover">
        <thead class="table-light">
            <tr class="table-primary">
                <th>id</th>
                <th>name </th>
                <th>phoneNumber</th>
                <th>orderStatus</th>
                <th>applicationUser.email</th>
                <th>orderTotal</th>
                <th></th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}
@model Company;  

<form method="post" asp-action="Upsert" >
    <!-- Post Method  -->



    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
                    <hr />
                </div>




                <div asp-validation-summary="All"></div> <!--Asp Validation Displaying All Errors  Catched-->
                <div class="row mb-3">
                    <label class="text-primary" asp-for="Name"></label> <!-- Label Displaying The Name From The Model -->
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation From ServerError -->
                </div>

                <div class="row mb-3">
                    <label class="text-primary" asp-for="StreetAdress"></label> <!-- Label Displaying The Name From The Model -->
                    <input type="text" class="form-control" asp-for="StreetAdress" />
                    <span asp-validation-for="StreetAdress" class="text-danger"></span> <!-- Validation From ServerError -->
                </div>


                <div class="row mb-3">
                    <label class="text-primary" asp-for="City"></label>
                    <input type="text" class="form-control" asp-for="City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>


                <div class="row mb-3">
                    <label class="text-primary" asp-for="State"></label>
                    <input type="text" class="form-control" asp-for="State" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <label class="text-primary" asp-for="PostalCode"></label>
                    <input type="text" class="form-control" asp-for="PostalCode" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <label class="text-primary" asp-for="PhoneNumber"></label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col col-6 md-col-3">
                        <button type="submit" class="btn btn-primary form-control " asp-controller="Company" asp-action="Upsert">@(Model.Id != 0 ? "Update" : "Create")</button> <!--Subimt Button og the values-->
                    </div>

                    <!-- asp-Controller Matches the Controller where action matches the action from controller-->
                    <div class="col col-6 md-col-3">
                        <a class="btn btn-secondary form-control" asp-controller="Company" asp-action="Index">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
        
    </div>


    

</form>


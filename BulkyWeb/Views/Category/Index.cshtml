@model List<Category>//Got The List Model from Category Model




<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Crate New Category
            </a>
        </div>

    </div>


<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-primary">
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(a => a.CategoryOrder))  //From The model  We Sort By Category and Display Data
        {
            <tr>
                <td>@obj.Name</td> 
                <td>@obj.CategoryOrder</td>
            </tr>
        }
    </tbody>
</table>
</div>